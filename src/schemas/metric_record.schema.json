{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://giatenica.com/schemas/metric_record.schema.json",
  "title": "MetricRecord",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "metric_key",
    "name",
    "value",
    "created_at"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0"
    },
    "metric_key": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "value": {
      "type": "number"
    },
    "unit": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
