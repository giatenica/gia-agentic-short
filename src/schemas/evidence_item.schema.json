{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://giatenica.com/schemas/evidence_item.schema.json",
  "title": "EvidenceItem",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "evidence_id",
    "source_id",
    "kind",
    "locator",
    "excerpt",
    "created_at",
    "parser"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0"
    },
    "evidence_id": {
      "type": "string",
      "minLength": 1
    },
    "source_id": {
      "type": "string",
      "minLength": 1
    },
    "kind": {
      "type": "string",
      "enum": [
        "quote",
        "table",
        "figure",
        "metric",
        "citation",
        "claim",
        "other"
      ]
    },
    "locator": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "value"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["file", "url", "doi", "arxiv", "path", "other"]
        },
        "value": {
          "type": "string",
          "minLength": 1
        },
        "span": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "start_line": { "type": "integer", "minimum": 1 },
            "end_line": { "type": "integer", "minimum": 1 },
            "start_page": { "type": "integer", "minimum": 1 },
            "end_page": { "type": "integer", "minimum": 1 },
            "start_char": { "type": "integer", "minimum": 0 },
            "end_char": { "type": "integer", "minimum": 0 }
          }
        }
      }
    },
    "excerpt": {
      "type": "string",
      "minLength": 1
    },
    "context": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "parser": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "version": { "type": "string" },
        "method": { "type": "string" }
      }
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
