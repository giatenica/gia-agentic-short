{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "DegradationEvent",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "created_at",
    "stage",
    "reason_code",
    "message"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "stage": {
      "type": "string",
      "minLength": 1
    },
    "reason_code": {
      "type": "string",
      "minLength": 1
    },
    "message": {
      "type": "string",
      "minLength": 1
    },
    "recommended_action": {
      "type": ["string", "null"]
    },
    "severity": {
      "type": "string",
      "enum": ["info", "warning", "error"]
    },
    "details": {
      "type": ["object", "null"],
      "additionalProperties": true
    }
  }
}
