{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "DegradationSummary",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "created_at",
    "run_id",
    "project_folder",
    "degradations",
    "counts"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "project_folder": {
      "type": "string",
      "minLength": 1
    },
    "degradations": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "schema_version",
          "created_at",
          "stage",
          "reason_code",
          "message"
        ],
        "properties": {
          "schema_version": {
            "type": "string",
            "const": "1.0"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "stage": {
            "type": "string",
            "minLength": 1
          },
          "reason_code": {
            "type": "string",
            "minLength": 1
          },
          "message": {
            "type": "string",
            "minLength": 1
          },
          "recommended_action": {
            "type": ["string", "null"]
          },
          "severity": {
            "type": "string",
            "enum": ["info", "warning", "error"]
          },
          "details": {
            "type": ["object", "null"],
            "additionalProperties": true
          }
        }
      }
    },
    "counts": {
      "type": "object",
      "additionalProperties": false,
      "required": ["total", "by_stage", "by_reason_code"],
      "properties": {
        "total": {"type": "integer", "minimum": 0},
        "by_stage": {
          "type": "object",
          "additionalProperties": {"type": "integer", "minimum": 0}
        },
        "by_reason_code": {
          "type": "object",
          "additionalProperties": {"type": "integer", "minimum": 0}
        }
      }
    }
  }
}
